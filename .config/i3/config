exec --no-startup-id ibus-daemon --xim
exec --no-startup-id dunst
exec --no-startup-id xss-lock -- betterlockscreen -l dim
exec --no-startup-id compton --config ~/.config/compton/compton.conf -b
exec --no-startup-id udiskie -an &
