# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $sysmenu "system:  [k]ill [l]ock  [p]oweroff  [r]eboot  [s]uspend"
bindsym $mod+Shift+e      mode $sysmenu

mode $sysmenu {
    bindsym k         exit
    bindsym l         exec --no-startup-id xset s activate, mode "default"
    bindsym s         exec --no-startup-id systemctl suspend, mode "default"
    bindsym p         exec shutdown -P now
    bindsym r         exec shutdown -r now
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

for_window [class="^.*"] border pixel 2

gaps inner 10
gaps outer 0

bindsym $mod+Shift+plus   gaps outer all plus 5
bindsym $mod+Shift+minus  gaps outer all minus 5
bindsym $mod+Shift+Escape gaps outer all set 23

bindsym $mod+plus   gaps inner all plus 5
bindsym $mod+minus  gaps inner all minus 5
bindsym $mod+Escape gaps inner all set 30

## MEDIA CONTROLS ##
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +10% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -10% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 1 toggle # mute mic

# Sreen brightness controls
bindsym XF86MonBrightnessUp --no-startup-id exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown --no-startup-id exec xbacklight -dec 20 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay --no-startup-id exec playerctl play
bindsym XF86AudioPause --no-startup-id exec playerctl pause
bindsym XF86AudioNext --no-startup-id exec playerctl next
bindsym XF86AudioPrev --no-startup-id exec playerctl previous

## Screen shots ##
bindsym Print exec --no-startup-id maim $HOME/Pictures/screenshots/$(date +%s).png
bindsym --release Shift+Print exec --no-startup-id maim -s ~/Pictures/screenshots/$(date +%s).png

## ROFI PASS
bindsym $mod+p exec --no-startup-id rofi-pass

